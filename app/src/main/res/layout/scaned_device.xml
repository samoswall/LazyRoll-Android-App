<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/scan_cbBox"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/scan_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:text="IP"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/scan_cbBox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="Name"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/scan_cbBox"
        app:layout_constraintTop_toBottomOf="@+id/scan_ip" />

    <TextView
        android:id="@+id/scan_hostname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hostname"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/scan_cbBox"
        app:layout_constraintTop_toBottomOf="@+id/scan_name"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/app_lazyrolls_2_ref"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>